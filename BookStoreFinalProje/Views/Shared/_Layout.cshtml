<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] KÜTÜPHANE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>


<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KÜTÜPHANE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Kitaplars" asp-action="Index">Kitaplars</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Kategoriler
                            </a>
                            <div class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="KategoriSayfalar" asp-action="Roman">Roman</a>
                                <a class="dropdown-item" asp-area="" asp-controller="KategoriSayfalar" asp-action="egitim">Okul/Sinav Hazirlik</a>
                                <a class="dropdown-item" asp-area="" asp-controller="KategoriSayfalar" asp-action="KisiselGelisim">KisiselGelisim</a>
                                <a class="dropdown-item" asp-area="" asp-controller="KategoriSayfalar" asp-action="Tarih">Tarih</a>
                                <a class="dropdown-item" asp-area="" asp-controller="KategoriSayfalar" asp-action="Din">Din</a>
                                <a class="dropdown-item" asp-area="" asp-controller="KategoriSayfalar" asp-action="Felsefe">Felsefe</a>
                                <a class="dropdown-item" asp-area="" asp-controller="KategoriSayfalar" asp-action="BilimTeknoloji">Bilim/Teknoloji</a>

                            </div>
                        </li>
                    
                    </ul>
                    <ul class="navbar-nav">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin İşlemler
                                </a>
                                <div class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index">Kitap Takip</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="AltKategorilers" asp-action="Index">Kategori düzen</a>
                                </div>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" href="/Startp/Logout">Admin Logout</a>
                        }
                        else
                        {
                            <a class="nav-link" href="/Startp/Login">Admin Login</a>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style=padding-bottom:50px>
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BookStoreFinalProje- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
