@model IEnumerable<BookStoreFinalProje.Models.Kitaplar>

@{
    ViewData["Title"] = "Roman";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Roman" asp-route-altKategoriId="@ViewBag.AltKategoriId" method="get">
    <div class="form-horizontal">
        <div class="row">
            <div class="form-group col-md-6">
                <label class="control-label">Select by Category:</label>
                @Html.DropDownList("AltKategoriId", ViewBag.AltKategoriId as SelectList, "All Category", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group col-md-6">
                <label class="control-label">Select by name:</label>
                @Html.TextBox("SearchString",null,new{@class = "form-control"})
            </div>

            <div class="form-group col-md-4 align-self-end">
                <input type="submit" name="actionButton" value="Filter" class="btn btn-outline-primary">
                <a asp-action="Roman" class="btn btn-outline-dark">Clear</a>
            </div>
        </div>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KitapAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YazarAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YayinTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StokMiktari)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AltKategori)
            </th>
        </tr>
    </thead>

    <div style="padding-top: 50px" class="row">
            
        @foreach (var item in Model)
        {
            <div  class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.KitapAdi)</h5>
                        <p class="card-text"><strong>Kitap Adi:</strong> @Html.DisplayFor(modelItem => item.KitapAdi)</p>

                            <p class="card-text"><strong>Yazar:</strong> @Html.DisplayFor(modelItem => item.YazarAdi)</p>
               
                            <p class="card-text"><strong>Alt Kategori:</strong> @Html.DisplayFor(modelItem => item.AltKategori.AltKategoriAdi)</p>

                            <div class="text-right">
                                <a asp-action="RomanDetails" asp-route-id="@item.KitapId" class="btn btn-info">RomanDetails</a>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</table>
