@model BookStoreFinalProje.Models.Kitaplar

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="@Url.Content("~/image/" + Model.KitapFoto)" width="250" height="350" />
        </div>
        <div class="col-md-8">
            <h2>@Model.KitapAdi</h2>
            <p><strong>Yazar:</strong> @Model.YazarAdi</p>
            <p><strong>Alt Kategori:</strong> @Model.AltKategori.AltKategoriAdi</p>
            <p><strong>Yayın Tarihi:</strong> @Model.YayinTarihi?.ToShortDateString() </p>
            <p><strong>Stok Miktarı:</strong> @Model.StokMiktari</p>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <h4>Açıklama</h4>
            <p>@Model.KitapAciklama</p>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-primary" asp-action="Roman">Listeye Geri Dön</a>
        </div>
    </div>
</div>
